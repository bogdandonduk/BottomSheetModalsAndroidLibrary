<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetModalStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SelectableStyle">
        <item name="colorControlHighlight">@android:color/darker_gray</item>
    </style>

    <style name="CardStyle">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>