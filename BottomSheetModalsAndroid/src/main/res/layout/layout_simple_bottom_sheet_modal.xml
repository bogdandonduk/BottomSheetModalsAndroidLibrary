<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_simple_bottom_sheet_modal_content_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:paddingStart="30dp"
        android:paddingTop="25dp"
        android:paddingEnd="30dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="65dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/layout_simple_bottom_sheet_modal_text_container_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_simple_bottom_sheet_modal_negative_button_container_card_view"
            style="@style/CardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/layout_simple_bottom_sheet_modal_positive_button_container_card_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/layout_simple_bottom_sheet_modal_negative_button"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Cancel" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layout_simple_bottom_sheet_modal_button_divider_linear_layout"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/layout_simple_bottom_sheet_modal_positive_button_container_card_view"
            app:layout_constraintEnd_toStartOf="@+id/layout_simple_bottom_sheet_modal_positive_button_container_card_view"
            app:layout_constraintStart_toEndOf="@+id/layout_simple_bottom_sheet_modal_negative_button_container_card_view"
            app:layout_constraintTop_toTopOf="@+id/layout_simple_bottom_sheet_modal_positive_button_container_card_view"
            tools:background="@android:color/darker_gray" />

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_simple_bottom_sheet_modal_positive_button_container_card_view"
            style="@style/CardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/layout_simple_bottom_sheet_modal_button_divider_2_container_constraint_layout"
            app:layout_constraintStart_toEndOf="@+id/layout_simple_bottom_sheet_modal_negative_button_container_card_view">

            <TextView
                android:id="@+id/layout_simple_bottom_sheet_modal_positive_button"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Confirm" />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_simple_bottom_sheet_modal_button_divider_2_container_constraint_layout"
            android:layout_width="9dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/layout_simple_bottom_sheet_modal_positive_button_container_card_view"
            app:layout_constraintEnd_toStartOf="@+id/layout_simple_bottom_sheet_modal_more_options_button_container_card_view"
            app:layout_constraintTop_toTopOf="@+id/layout_simple_bottom_sheet_modal_positive_button_container_card_view">

            <LinearLayout
                android:id="@+id/layout_simple_bottom_sheet_modal_button_divider_2_linear_layout"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@android:color/darker_gray" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_simple_bottom_sheet_modal_more_options_button_container_card_view"
            style="@style/CardStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:cardCornerRadius="1000000dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layout_simple_bottom_sheet_modal_positive_button_container_card_view">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_simple_bottom_sheet_modal_more_options_button_container_constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/layout_simple_bottom_sheet_modal_more_options_button_icon_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/ic_overflow_menu"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
